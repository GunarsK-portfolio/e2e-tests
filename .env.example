# Testing Environment Variables
# Copy this file to .env and fill in your credentials

# Admin credentials for E2E tests
TEST_ADMIN_USERNAME=admin
TEST_ADMIN_PASSWORD=your_password_here

# Base URLs (adjust if running services on different ports)
# Admin services (through Traefik)
TEST_ADMIN_WEB_URL=http://localhost:81
TEST_ADMIN_API_URL=http://localhost:8083
TEST_AUTH_API_URL=http://localhost:8084

# Public services
TEST_PUBLIC_WEB_URL=http://localhost:80
TEST_PUBLIC_API_URL=http://localhost:8082

# Test behavior
TEST_HEADLESS=false              # Run browser in headless mode (true/false)
TEST_SCREENSHOT_DIR=             # Where to save screenshots (defaults to system temp dir)
TEST_SLOW_MO=0                   # Slow down operations in ms (useful for debugging)
TEST_TIMEOUT=30000               # Default timeout in ms
TEST_BROWSER=chromium            # Browser to use (chromium/firefox/webkit)
