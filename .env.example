# =============================================================================
# E2E Testing Environment Variables
# =============================================================================
# Copy this file to .env and configure for your environment:
#   task setup:env
#
# For CI configuration with HTTPS/Traefik, see README.md
# =============================================================================

# -----------------------------------------------------------------------------
# Authentication (required for admin tests)
# -----------------------------------------------------------------------------
TEST_ADMIN_USERNAME=admin
TEST_ADMIN_PASSWORD=your_password_here

# Demo user for RBAC read-only tests (optional, has defaults)
TEST_DEMO_USERNAME=demo
TEST_DEMO_PASSWORD=demo123

# -----------------------------------------------------------------------------
# Service URLs
# -----------------------------------------------------------------------------
# Traefik redirects HTTP to HTTPS, so use HTTPS URLs with TEST_IGNORE_HTTPS_ERRORS=true

# Admin services (via Traefik HTTPS on port 8443)
TEST_ADMIN_WEB_URL=https://localhost:8443
TEST_ADMIN_API_URL=https://localhost:8443/admin-api/v1
TEST_AUTH_API_URL=https://localhost:8443/auth/v1

# Public services (via Traefik HTTPS on port 443)
TEST_PUBLIC_WEB_URL=https://localhost
TEST_PUBLIC_API_URL=https://localhost/public-api/v1

# -----------------------------------------------------------------------------
# Browser Settings
# -----------------------------------------------------------------------------
# Browser engine: chromium (default), firefox, or webkit
TEST_BROWSER=chromium

# Run in headless mode (no visible browser window)
# Values: true, false (default)
TEST_HEADLESS=false

# Ignore HTTPS certificate errors (required for self-signed certs)
# Values: true (required for local HTTPS), false
TEST_IGNORE_HTTPS_ERRORS=true

# -----------------------------------------------------------------------------
# Test Behavior
# -----------------------------------------------------------------------------
# Default timeout for Playwright operations in milliseconds
# Default: 30000 (30 seconds)
TEST_TIMEOUT=30000

# Slow down operations by this many milliseconds (useful for debugging)
# Values: 0 (default, no delay), 100-1000 (visible slowdown)
TEST_SLOW_MO=0

# Directory to save screenshots (leave empty for system temp directory)
# Example: /tmp/e2e-screenshots or C:\temp\screenshots
TEST_SCREENSHOT_DIR=
